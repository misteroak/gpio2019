{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Sync code to Pi",
            "type": "shell",
            "command": "rsync -axv -e \"ssh\" --exclude \"node_modules\" --max-size=5MB \"${workspaceFolder}/server/\" pi@pi:Projects/gpio/synced-server/",
            "problemMatcher": [],
            "isBackground": true,
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "clear": false
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Remote Execute",
            "type": "shell",
            "command": "ssh -n pi \"sudo killall node; sudo node ~/Projects/gpio/synced-server/server.js\"",
            "dependsOn": [
                "Sync code to Pi"
            ],
            "problemMatcher": []
        }
    ]
}